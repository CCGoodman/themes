uniform half4 color;

void main(inout half4 color) {
    // Calculate the luminance of the current pixel
    half luminance = dot(color.rgb, half3(0.2126, 0.7152, 0.0722));
    
    // Adjust the color towards gold based on the luminance
    color.rgb = mix(color.rgb, half3(1.0, 0.843, 0.0), pow(luminance, 1.5));
}
